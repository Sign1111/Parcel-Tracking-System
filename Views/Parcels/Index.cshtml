@model IEnumerable<Parcel_Tracking.Models.Parcel>

@{
    ViewData["Title"] = "Parcels";
}

<h1 class="mb-4">Parcel Database</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Parcel</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Tracking #: @item.TrackingNumber</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Recipient: @item.RecipientName</h6>

                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><strong>Created By:</strong> @item.CreatedBy</li>
                        <li class="list-group-item"><strong>Created At:</strong> @item.CreatedAt</li>
                        <li class="list-group-item"><strong>Address:</strong> @item.Address</li>
                        <li class="list-group-item"><strong>Status:</strong> @item.Status</li>
                        <li class="list-group-item"><strong>Weight:</strong> @item.Weight</li>
                        <li class="list-group-item"><strong>Shipping Method:</strong> @item.ShippingMethod</li>
                        <li class="list-group-item"><strong>Shipped At:</strong> @item.ShippedAt</li>
                        <li class="list-group-item"><strong>Delivered At:</strong> @item.DeliveredAt</li>
                        <li class="list-group-item"><strong>Recipient Email:</strong> @item.RecipientEmail</li>
                    </ul>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        <a asp-action="UpdateStatus" asp-route-id="@item.Id" class="btn btn-info btn-sm">Update Status</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
